
<h1>Listing order Statuses</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Ordered date</th>
      <th>Arrived in Mia</th>
      <th>Arrived Suriname</th>
      <th>Picked up</th>
      <th>Orders</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_statuses.each do |order_status| %>
      <tr>
        <td><%= order_status.ordered_date %></td>
        <td><%= order_status.arrived_mia %></td>
        <td><%= order_status.arrived_sme %></td>
        <td><%= order_status.picked_up %></td>
        <td><%= order_status.orders %></td>
        <td><%= link_to 'Show', order_status %></td>
        <td><%= link_to 'Edit', edit_order_status_path(order_status) %></td>
        <td><%= link_to 'Destroy', order_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

