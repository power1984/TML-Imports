<%= simple_form_for(@order_status) do |f| %>

    <%= f.error_notification %>

    <table class="table">
      <tr>
        <th>Product Name</th>
        <th>Customer Name</th>
        <th>Order Date</th>
        <th>Ordered?</th>


      </tr>
      <% @order_lines.each do |order_line| %>
          <tr>
            <td><%= order_line.product_name %></td>
            <td><%= order_line.customer_full_name %></td>
            <td><%= order_line.order_date %></td>
            <td><input type="checkbox"></td>
          </tr>
      <% end %>
    </table>


    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
