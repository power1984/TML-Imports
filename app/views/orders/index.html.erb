
<h1>Listing Orders</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Invoice numbers</th>
      <th>Customers</th>
      <th>Product name</th>
      <th>Product description</th>
      <th>Size color</th>
      <th>Quantity</th>
      <th>Online price</th>
      <th>Tml price</th>
      <th>Estimated weight</th>
      <th>Estimated volume in ft3</th>
      <th>Down payment</th>
      <th>Freight type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.date %></td>
        <td><%= order.invoice_numbers %></td>
        <td><%= order.customer_full_name %></td>
        <td><%= link_to(order.product_name,order.url ) %></td>
        <td><%= order.product_description %></td>
         <td><%= order.size_color %></td>
        <td><%= order.quantity %></td>
        <td><%= number_to_currency(order.online_price,:unit=>"$") %></td>
        <td><%= number_to_currency(order.tml_price,:unit=>"$") %></td>
        <td><%= order.estimated_weight %></td>
        <td><%= order.volumecalc %></td>
        <td><%= number_to_percentage(order.down_payment_percentage, precision: 2,raise: true) %></td>
        <td><%= order.freightchoice %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

