<h1>New order Status</h1>

<%= form_tag order_lines_ordered_path, :method => :put do %>

    <table class="table table-hover">
      <thead>
        <th>Customer Name</th>
        <th>Order Date</th>
        <th>Product Name</th>
        <th>Product Description</th>
        <th>Qty</th>
        <th>Ordered?</th>
      </thead>
      <% @order_lines.each do |order_line| %>
          <tr>
            <td><%= order_line.customer_full_name %></td>
            <td><%= order_line.order_date %></td>
            <td><%= link_to(order_line.product_name,order_line.url, target: "_blank") %></td>
            <td><%= order_line.product_description %></td>
            <td><%= order_line.quantity %></td>
            <td><%= check_box_tag "order_line_ids[]", order_line.id %></td>
          </tr>
      <% end %>
    </table>


    <div class="form-actions">
      <%= submit_tag "Mark as ordered" %>
    </div>
<% end %>

<%= link_to 'Back', order_lines_path %>
