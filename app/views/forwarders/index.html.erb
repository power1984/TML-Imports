<p id="notice"><%= notice %></p>

<h1>Listing Forwarders</h1>

<table class="table table-hover">

  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Address</th>
      <th>Alias</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forwarders.each do |forwarder| %>
      <tr>
        <td><%= forwarder.first_name %></td>
        <td><%= forwarder.last_name %></td>
        <td><%= forwarder.address %></td>
        <td><%= forwarder.alias %></td>
        <td><%= link_to 'Show', forwarder %></td>
        <td><%= link_to 'Edit', edit_forwarder_path(forwarder) %></td>
        <td><%= link_to 'Destroy', forwarder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

