


<h1>Listing Trackings</h1>

<%= form_tag(trackings_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Tracking" %>
    <%= submit_tag "Search", :name => nil %>
<% end %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Tracking number</th>
      <th>Logistic</th>
      <th>Created at</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trackings.each do |tracking| %>
      <tr>
        <td><%= link_to(tracking.tracking_number,tracking.logistic_track, target: "_blank")  %></td>
        <td><%= tracking.logistic.logistic %></td>
        <td><%= tracking.created_at %></td>

        <td><%= link_to 'Show', tracking %></td>

        <% if tracking.user == current_user %>
            <td><%= link_to 'Edit', edit_tracking_path(tracking) %></td>
            <td><%= link_to 'Destroy', tracking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tracking', new_tracking_path %>
